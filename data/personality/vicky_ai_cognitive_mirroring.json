  "metricas_evaluacion": {
    "indice_espejo_cognitivo": {
      "formula": "0.4*similaridad_estilo + 0.3*anticipacion_exitosa + 0.3*satisfaccion_usuario",
      "umbral_ideal": "> 0.88",
      "componentes": {
        "similaridad_estilo": "Qué tan bien imita el estilo comunicacional",
        "anticipacion_exitosa": "Precisión en predicción de necesidades",
        "satisfaccion_usuario": "Feedback directo e indirecto del usuario"
