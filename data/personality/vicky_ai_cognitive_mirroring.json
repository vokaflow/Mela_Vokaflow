        "micro_adjustment_engine": {
          "parametros": {
            "velocidad_habla": {
              "rango": "0.7x - 1.8x",
              "ajuste_basado_en": [
                "Estrés percibido del usuario",
                "Complejidad del contenido",
                "Urgencia de la situación",
                "Preferencias históricas"
