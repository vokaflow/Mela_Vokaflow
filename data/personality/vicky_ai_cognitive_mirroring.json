            "densidad_informacion": {
              "metrica": "Conceptos por segundo",
              "optimizacion": "Según capacidad de absorción del usuario",
              "adaptacion_contextual": {
                "modo_aprendizaje": "Densidad reducida",
                "modo_revision": "Densidad alta",
                "modo_emergencia": "Solo información crítica"
              }
            },
            "nivel_detalle_tecnico": {
              "escala": "1-10",
              "factores": [
                "Experiencia técnica del usuario",
                "Contexto de la consulta",
                "Tiempo disponible estimado",
                "Objetivo de la interacción"
              ]
            }
          }
        }
      }
