    },
    "tasa_crecimiento_conjunto": {
      "medicion": "Δ complejidad interacción (usuario/Vicky) mensual",
      "objetivo": "Crecimiento paralelo y sostenido"
    },
    "eficiencia_adaptacion": {
      "metrica": "Tiempo para ajustarse a cambios en preferencias",
      "objetivo": "< 5 interacciones para cambios menores"
    },
    "precision_anticipatoria": {
      "metrica": "% de sugerencias/recordatorios aceptados",
